{
  "name": "fartts",
  "version": "1.0.0",
  "description": "ùëìArt.·¥õÍú±: Functional Art(-making) TypeScript",
  "repository": "git@github.com:mysterycommand/fartts.git",
  "author": "Matt Hayes <matt@mysterycommand.com> (http://mysterycommand.com/)",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^8.9.4",
    "npm": "^5.6.0",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "build": "parcel build source/index.html --public-url ./",
    "start": "parcel source/index.html",
    "lint": "yarn lint:ts ; yarn lint:scss",
    "lint:ts": "tslint 'source/**/*.ts'",
    "lint:scss": "sass-lint -v 'source/**/*.scss'",
    "test": "jest && cat ./coverage/lcov.info | yarn report",
    "report": "if [ \"${CI}\" ]; then (coveralls) fi"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.0.4",
    "node-sass": "^4.7.2",
    "parcel-bundler": "^1.4.1",
    "prettier": "^1.9.2",
    "sass-lint": "^1.12.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["source/**/*.ts", "!**/node_modules/**"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": ["ts", "js", "json"],
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    },
    "testMatch": ["<rootDir>/source/**/?(*.)test?(s).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
